<!-- forum editor -->
<h2>{t}Edit a Forum{/t}</h2>
{include file="error.inc.tmpl"}

<form action="{$action|escape}" method="post" accept-charset="utf-8" autocomplete="off">
<div>
<input type="hidden" name="action"   value="forum_submit" />
<input type="hidden" name="forum_id" value="{$forum->get_id()}" />

<p>
  <label>{t}Status:{/t}</label><br />
  {html_options name="status" options=$status_list selected=$forum->get_status()}
</p>

<p>
  <label>{t}Name:{/t}</label><br />
  <input type="text"
         name="name"
         size="50"
         value="{$forum->get_name()|escape}" />
</p>

<p>
  <label>{t}Summary:{/t}</label><br />
  <textarea cols="80" rows="3" name="description">{$forum->get_description()|escape}</textarea>
</p>

<p>
  <input type="submit" name="forum_submit" value="{t}Save the Forum{/t}" />
</p>
</div>
</form>
<!-- end forum editor -->
