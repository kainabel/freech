<!-- message_compose -->
<p>
<form action='{$action|escape}' id='commentform' method='POST' accept-charset='utf-8'>
<font size='+1' color='red'>{lang text="writeamessage"|escape}</font>
{if $hint != ""}<br /><font size='+1' color='red'>{$hint}</font>{/if}
<p>
<input type='hidden' name='action'    value='message_submit'>
<input type='hidden' name='parent_id' value='{$parent_id}'>
<input type='hidden' name='msg_id'    value='{$message->get_id()}'>
<input type='hidden' name='may_quote' value='{$may_quote|escape}'>
{if $__user->is_anonymous()}
<b>{lang text="name"|escape}</b>&nbsp;<i>{lang text="required"|escape}</i><br />
<input type='text' size='80' name='username' value='{$message->get_username()|escape}' maxlength='{$max_usernamelength}'>
{else}
<input type='hidden' name='username' value='{$__user->get_username()|escape}'>
{/if}
<p>
<b>{lang text="msgtitle"|escape}</b>&nbsp;<i>{lang text="required"|escape}</i><br />
<input type='text' size='80' name='subject' value='{$message->get_subject()|escape}' maxlength='{$max_titlelength}'>
<p>
<b>{lang text="msgbody"|escape}</b>&nbsp;<i>{lang text="required"|escape}</i><br />
{strip}
<textarea name='body' cols='80' rows='20' wrap='virtual'>
{$message->get_body()|escape}
</textarea>
{/strip}
<p>
{if $may_quote}
<input type='submit' name='quote' value='{lang text="quote"|escape}'>&nbsp;
{/if}
<input type='submit' name='preview' value='{lang text="preview"|escape}'>&nbsp;
<input type='submit' name='send' value='{lang text="send"|escape}'>
</form>
<!-- end message_compose -->
