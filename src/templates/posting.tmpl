<!-- posting -->
<table id='posting' border='0' cellpadding='0' cellspacing='0' width='100%' summary=''>
 <tr valign='middle'>
  <td>
  <span class='date'>{$posting->get_created_time()}</span>
{if $posting->is_updated()}
  <span class='edited'>
    {t 1=$posting->get_updated_time()}(last edited %1){/t}
  </span>
{/if}
  <br />
  <b>{$posting->get_subject()|escape}</b>
<table summary=''>
  <tr>
    <td>
{if $posting->get_user_is_anonymous()}
      <i>{$posting->get_username()|escape}</i>
{else}
      <a href="{$posting->get_user_profile_url_string()|escape}">{$posting->get_username()|escape}</a>
{/if}
    </td>
    <td>
    <img class='icon'
         src="{$posting->get_user_icon()|escape}"
         alt=""
         title="{$posting->get_user_icon_name()|escape}" />
    </td>
    <td>
{if $__group->may('moderate')}
    {include file="moderator_buttons.inc.tmpl" posting=$posting}
{/if}
    </td>
{if $posting->get_user_is_anonymous()}
    <td>{t 1=$posting->get_ip_address_hash(10)}(IP hash: %1){/t}</td>
{/if}
  </tr>
</table>
  </td>
 </tr>
 <tr>
  <td><br />
<!-- posting body -->
<div id='posting_body'>
{$posting->get_body_html()}
</div>
<!-- end posting body -->
  <br />
  <br />
  </td>
 </tr>
</table>
<!-- end posting -->
