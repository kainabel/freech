<!-- poll form -->
<h2>{t}Start a Poll{/t}</h2>
{include file="error.inc.tmpl"}

<form action='{$action|escape}' method='post' accept-charset='utf-8'>
<div>
<input type='hidden' name='action'    value='poll_submit' />
<input type='hidden' name='forum_id'  value='{$poll->get_forum_id()}' />
<input type='hidden' name='n_options' value='{$poll->n_options()}' />

<p>
  <label>{t}Poll title:{/t}</label>
  <i>{t}(required){/t}</i><br />
  <input type='text'
         size='80'
         name='poll_title'
         value='{$poll->get_title()|escape}' /><br/>
  <input type="checkbox"
         name="allow_multiple" {if $poll->get_allow_multiple()}checked="checked"{/if} />
  {t}Allow for checking multiple boxes.{/t}
</p>

{foreach name=options item=option from=$poll->get_options()}
<p>
  <label>{t number=$smarty.foreach.options.iteration}Option %1:{/t}</label><br />
  <input type='text'
         size='80'
         name='poll_option{$smarty.foreach.options.index}'
         value='{$option|escape}' /><br />
</p>
{/foreach}

<p>
  <input type='submit' name='add_row' value='{t}Add Another Option{/t}' />
  <input type='submit' name='send' value='{t}Submit Poll{/t}' />
</p>
</div>
</form>
<!-- end poll form -->
