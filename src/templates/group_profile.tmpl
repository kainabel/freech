<!-- group profile -->
<h2>
  {t name=$group->get_name()}Profile of %1{/t}
{if $__group->may('administer')}
  {$group->get_editor_url_html()}
{/if}
</h2>
{include file="error.inc.tmpl"}

<table summary=''>
  <tr>
    <td>{t}Group ID:{/t}</td>
    <td>{$group->get_id()|escape}</td>
  </tr>
  <tr>
    <td>{t}User group:{/t}</td>
    <td>
      {$group->get_name()|escape}
      <img src="{$group->get_icon()}" title="{$group->get_name()}" alt="" />
    </td>
  </tr>
  <tr>
    <td>{t}Special functionality:{/t}</td>
{if $group->is_special()}
    <td>{t}Yes{/t}</td>
{else}
    <td>{t}None{/t}</td>
{/if}
  </tr>
  <tr>
    <td>{t}Status:{/t}</td>
    <td>{$group->get_status_name()|escape}</td>
  </tr>
  <tr>
    <td>{t}Created on:{/t}</td>
    <td>{$group->get_created_time()|escape}</td>
  </tr>
</table>
<br />
{include file="indexbar.tmpl"}
{include file="user_list.tmpl"}
{include file="indexbar.tmpl"}
<!-- end group profile -->
