<!-- home -->
<h2>{$title|escape}</h2>
<span class="intro">{lang text="home_intro"}</span>
{include file="error.inc.tmpl"}

{foreach item=forum from=$forums}
<p id="forum_home">
  <span class="forum_link">{$forum->get_url_html()}</span>
  <span class="forum_status">{$forum->get_status_text()|escape}</span>
  <br/>
  <span class="forum_description">{$forum->get_description()|escape}</span>
</p>
{/foreach}

<div class="section" id="home_forum_links">
  <h3>{lang text="home_forum_links"}</h3>
  <ul>
  {foreach item=item from=$forum_links->get_items()}
    {if $item->is_separator()}
      <li><hr/></li>
    {elseif $item->is_link()}
      <li>{$item->get_url_html()}</li>
    {else}
      <li>{$item->get_text()|escape|replace:" ":"&nbsp;"}</li>
    {/if}
  {/foreach}
  </ul>
</div>

<div class="section" id="home_activity">
  <h3>{lang text="home_activity"}</h3>
  <ul>
  {foreach item=posting from=$postings}
    <li>{$posting->get_url_html()}</li>
  {/foreach}
  </ul>
</div>

<div class="section" id="home_new_users">
  <h3>{lang text="home_new_users"}</h3>
  <ul>
  {foreach item=user from=$new_users}
    <li>{$user->get_profile_url_html($user->get_name())}</li>
  {/foreach}
  </ul>
</div>
<!-- end home -->
