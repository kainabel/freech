<!-- footer -->
<ul id="views">
{foreach name=loop item=item from=$footer_links->get_items()}
  {if $item->is_separator()}
    <li>|</li>
  {elseif !$item->is_link()}
    <li>{$item->get_text()|escape|replace:" ":"&nbsp;"}</li>
  {else}
    <li>{$item->get_url_html()}</li>
  {/if}
{/foreach}
</ul>

<div id="powered_by">
  <hr />
  <span>
  Powered by <a href='{$version.url}'>{$version.text}</a>.
  </span>
</div>
</div>
