<!-- latest_row -->
<tr valign='middle' bgcolor='#ffffff'>
  <td align='center' width=8><img src='themes/heise/img/null.png' width=8 height=23 alt='' /></td>
  <td align='left'>{strip}
{if $message->url == ""}
  <font size='-1'>&nbsp;{$message->get_subject()|escape}</font>
{else}
  <font size='-1'>&nbsp;<a href='{$message->url|escape}'>{$message->get_subject()|escape}</a></font>
{/if}
  </td>
{/strip}
  <td><img src='themes/heise/img/null.png' width=8 height=23 alt='' /></td>
{if $message->is_selected()}
  {assign var="attr" value=" color='green'"}
{else}
  {assign var="attr" value=""}
{/if}
  <td align='left'>
    &nbsp;<font size='-1'{$attr}>{$message->get_username()|escape}</font>
{if $message->get_user_type() != "registered"}
    <img src="themes/heise/img/{$message->get_user_type()}_user.png" title="{lang text=$message->get_user_type()}" />
{/if}
  </td>
{if $message->is_selected()}
  <td align='right' nowrap><font size='-1' color='green'>{$message->get_created_time()}</font></td>
{elseif $message->is_new()}
  <td align='right' nowrap><font size='-1' color='red'>{$message->get_created_time()}</font></td>
{else}
  <td align='right' nowrap><font size='-1'>{$message->get_created_time()}</font></td>
{/if}
  <td align='center' width=8><img src='themes/heise/img/null.png' width=8 height=23 alt='' /></td>
 </tr>
<!-- end latest_row -->
