<table summary=''>
  <tr>
{if $type == "weekly_top"}
    <th colspan="3">{t}Weekly Top 20{/t}</th>
{elseif $type == "alltime_top"}
    <th colspan="3">{t}All Time Top 20{/t}</th>
{/if}
  </tr>
  <tr>
    <th></th>
    <th align='left'>{t}Username{/t}</th>
    <th align='right'>{t}Postings{/t}</th>
  </tr>
{foreach item=user from=$users name=user}
  <tr>
    <td align='right'>{$smarty.foreach.user.iteration}.</td>
    <td>
      <a href="{$user->get_profile_url_string()|escape}">{$user->get_name()|escape}</a>
      <img src="{$user->get_icon()|escape}"
           alt=""
           title="{$user->get_icon_name()|escape}" />
    </td>
    <td align='right'>{$user->n_postings|escape}</td>
  </tr>
{/foreach}
</table>
