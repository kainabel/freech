<table>
  <tr>
    <th colspan="3">{lang text=$title}</th>
  </tr>
  <tr>
    <th></th>
    <th align='left'>{lang text="username"}</th>
    <th align='right'>{lang text="n_postings"}</th>
  </tr>
{foreach item=user from=$users name=user}
  <tr>
    <td align='right'>{$smarty.foreach.user.iteration}.</td>
    <td>
      <a href="{$user->get_profile_url()}">{$user->get_name()}</a>
      <img src="{$user->get_icon()|escape}"
           title="{lang text=$user->get_icon_name()}" />
    </td>
    <td align='right'>{$user->n_postings}</td>
  </tr>
{/foreach}
</table>
