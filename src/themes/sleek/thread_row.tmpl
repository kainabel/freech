<!-- thread_row -->
{*
  $row->leaftype:
  1: PARENT_WITHOUT_CHILDREN
  2: PARENT_WITH_CHILDREN_UNFOLDED
  3: PARENT_WITH_CHILDREN_FOLDED
  4: BRANCHBOTTOM_CHILD_WITHOUT_CHILDREN
  5: BRANCHBOTTOM_CHILD_WITH_CHILDREN
  6: CHILD_WITHOUT_CHILDREN
  7: CHILD_WITH_CHILDREN
*}
{if $row->leaftype == 1 || $row->leaftype == 2 || $row->leaftype == 3}
<tr><td colspan=7 height='7'></td></tr>
<tr valign='middle'>
  <td align='center' width=8><img src='themes/sleek/img/null.png' width=8 height=23 alt='' /></td>
  <td align='left' colspan=5>
  {if $row->url == "" || $row->selected}
    <table width='100%' height=65 class='dashed' bgcolor='#eceff9' border='0' cellpadding='0' cellspacing='0'>
  {else}
    <table onmouseover="this.className='highlight';"
           onmouseout="this.className='dashed';"
           onclick="document.location.href='{$row->url}';"
           width='100%' height=65 class='dashed' bgcolor='#eceff9' border='0' cellpadding='0' cellspacing='0'>
  {/if}
    <tr>
      <td align='center' width=8><img src='themes/sleek/img/null.png' width=8 height=23 alt='' /></td>
  {if $row->url}
      <td align='left' width=48><img src='themes/sleek/img/avatar_none.png' border=0 width=48 height=48 alt='*' /></td>
  {else}
      <td align='left' width=48><img src='themes/sleek/img/avatar_blocked.png' border=0 width=48 height=48 alt='*' /></td>
  {/if}
      <td align='center' width=8><img src='themes/sleek/img/null.png' width=8 height=23 alt='' /></td>
      <td align='left'>
  {if !$row->url}
      <i>{$row->title}</i><br />
  {elseif $row->selected}
      <font color='green'>{$row->title|truncate:65}</font><br />
  {else}
      <a href='{$row->url}'>{$row->title|truncate:65}<br />
  {/if}
      <font class='introduction' size='-1'>
        {$row->text|regex_replace:"/[\r\n]/":" "|truncate:200:""|truncate:250:" [...]":true|escape}
      </font>
  {if $row->url && !$row->selected}
      </a>
  {/if}
    </td>
    <td><img src='themes/sleek/img/null.png' width=8 height=23 alt='' /></td>
    <td align='right'>
  {if $row->selected}
    <font color='green'>{$lang.postedby|replace:"[USER]":$row->name|replace:" ":"&nbsp;"}</font><br /><br />
    <font size='-1' color='green' nowrap>{$row->time}</font>
  {elseif $row->new}
    <font color='red'>{$lang.postedby|replace:"[USER]":$row->name|replace:" ":"&nbsp;"}</font><br /><br />
    <font size='-1' color='red' nowrap>{$row->time}</font>
  {else}
    {$lang.postedby|replace:"[USER]":$row->name|replace:" ":"&nbsp;"}<br /><br />
    <font size='-1' nowrap>{$row->time}</font>
  {/if}
    </td>
    <td align='center' width=8><img src='themes/sleek/img/null.png' width=8 height=23 alt='' /></td>
  </tr>
  </table>
  </td>
  <td align='center' width=8><img src='themes/sleek/img/null.png' width=8 height=23 alt='' /></td>
</tr>
{*
  Non-parent rows are handled here.
  $indents:
  1: INDENT_DRAW_DASH
  2: INDENT_DRAW_SPACE
*}
{else}
<tr valign='middle' bgcolor='#ffffff'>
  <td align='center' width=8><img src='themes/sleek/img/null.png' width=8 height=23 alt='' /></td>
{strip}
  <td align='left'>
  <table border=0 cellspacing=0 cellpadding=0>
    <tr>
      <td align='left'>
      <img src='themes/sleek/img/null.png' width=20 height=23 alt='&nbsp;' />
  {foreach item=indent from=$indents}
    {if $indent == 1}
      <img src='themes/sleek/img/l.png' width=20 height=23 alt='|' />
    {else}
      <img src='themes/sleek/img/null.png' width=20 height=23 alt='&nbsp;' />
    {/if}
  {/foreach}
  {if $row->leaftype == 4 || $row->leaftype == 5}
      <img src='themes/sleek/img/e.png' width=20 height=23 alt='`-' />
  {else}
      <img src='themes/sleek/img/x.png' width=20 height=23 alt='|-' />
  {/if}
      </td>
      <td align='center' width=8><img src='themes/sleek/img/null.png' width=8 height=23 alt='' /></td>
  {if !$row->url}
      <td align='left'><i>{$row->title|truncate:65}</i></td>
  {elseif $row->selected}
      <td align='left'><font color='green'>{$row->title|truncate:65}</font></td>
  {else}
      <td align='left'><a href='{$row->url}'>{$row->title|truncate:65}</a></td>
  {/if}
    </tr>
  </table>
  </td>
{/strip}
  <td><img src='themes/sleek/img/null.png' width=8 height=23 alt='' /></td>
  {if $row->selected}
  <td align='left'><font color='green'>{$row->name}</font></td>
  <td align='right' nowrap><font color='green'>{$row->time}</font></td>
  {elseif $row->new}
  <td align='left'>{$row->name}</td>
  <td align='right' nowrap><font color='red'>{$row->time}</font></td>
  {else}
  <td align='left'>{$row->name}</td>
  <td align='right' nowrap>{$row->time}</td>
  {/if}
  <td align='center' width=8><img src='themes/sleek/img/null.png' width=8 height=23 alt='' /></td>
</tr>
{/if}
<!-- end thread_row -->
