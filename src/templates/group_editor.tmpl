<!-- group editor -->
<h2>{t 1=$group->get_name()}Permissions of %1{/t}</h2>
{include file="error.inc.tmpl"}

<form action="{$action|escape}" method="post" accept-charset="utf-8" autocomplete="off">
<input type="hidden" name="group_id" value="{$group->get_id()}" />
<table summary=''>
  <tr>
    <td>{t}Group ID:{/t}</td>
    <td>{$group->get_id()|escape}</td>
  </tr>
  <tr>
    <td>{t}User group:{/t}</td>
    <td><input size="70" type="text" name="groupname" value="{$group->get_name()|escape}" /></td>
  </tr>
  <tr>
    <td>{t}Icon:{/t}</td>
    <td>
      {$group->get_icon()|escape}
      <img src="{$group->get_icon()}" title="{$group->get_name()|escape}" alt="" />
    </td>
  </tr>
  <tr>
    <td>{t}Created on:{/t}</td>
    <td>{$group->get_created_time()|escape}</td>
  </tr>
</table>

<h3>{t}Permissions{/t}</h3>
<table summary=''>
{foreach key=action item=permission from=$group->get_permission_list()}
  <tr>
    <td>
      <input type="checkbox" name="may_{$action|escape}" {if $permission}checked="checked"{/if} />
      {t 1=$action}Permit '%1'{/t}
    </td>
  </tr>
{/foreach}
</table>
<input type="submit" name="group_submit" value="{t}Save Group{/t}" />
</form>
<!-- end group editor -->
