<!-- footer -->
<table width='100%' cellspacing='0' cellpadding='5' border='0' summary=''>
 <tr>
  <td align='center'>
  {strip}
{foreach name=loop item=item from=$footer_links->get_items()}
  {if $smarty.foreach.loop.index > 0}&nbsp;&nbsp;&nbsp;{/if}
  {if $item->is_separator()}
    |&nbsp;&nbsp;&nbsp;
  {elseif !$item->is_link()}
    {$item->get_text()|escape|replace:" ":"&nbsp;"}
  {else}
    {$item->get_url_html()}
  {/if}
{/foreach}
{/strip}
  </td>
 </tr>
</table>
