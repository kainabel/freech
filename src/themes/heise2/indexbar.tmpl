<!-- indexbar -->
<table class='index' width='100%' cellspacing='0' cellpadding='3' border='0' bgcolor='#003399'>
 <tr>
  <td align='left' height='30'>
  <font color='white' size='-1'>
  {strip}
{foreach item=item from=$items}
  {if !$item.text}
    &nbsp;&nbsp;
  {elseif !$item.url}
    &nbsp;{$item.text|escape|replace:" ":"&nbsp;"}
  {else}
    &nbsp;<a href='{$item.url|escape}'>{$item.text|escape|replace:" ":"&nbsp;"}</a>
  {/if}
{/foreach}
{/strip}
  </font>
  </td>
 </tr>
</table>
<!-- end indexbar -->
