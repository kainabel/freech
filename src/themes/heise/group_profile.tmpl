<p>
<h2>
  {lang text="group_profile" name=$group->get_name()}
{if $__group->may('administer')}
  <a href="{$group->get_editor_url_string()|escape}">{lang text="group_edit"}</a>
{/if}
</h2>
{if $hint}
<span class='hint'>{$hint|escape}</span>
<br />
{/if}

<table summary=''>
  <tr>
    <td>{lang text="group_id"}</td>
    <td>{$group->get_id()|escape}</td>
  </tr>
  <tr>
    <td>{lang text="group_name"}</td>
    <td>
      {$group->get_name()|escape}
      <img src="{$group->get_icon()}" title="{$group->get_name()}" />
    </td>
  </tr>
  <tr>
    <td>{lang text="group_special"}</td>
{if $group->is_special()}
    <td>{lang text="group_is_special"}</td>
{else}
    <td>{lang text="group_is_not_special"}</td>
{/if}
  </tr>
  <tr>
    <td>{lang text="group_status"}</td>
    <td>{$group->get_status_name()}</td>
  </tr>
  <tr>
    <td>{lang text="group_created"}</td>
    <td>{$group->get_created_time()|escape}</td>
  </tr>
</table>
